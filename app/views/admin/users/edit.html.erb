<div class="row">
  <div calss="col-lg-12">
    <h2 class="head-line title_h2 text-center">
      <%= @user.name %>さんの会員情報編集
    </h2>
      <%= form_with(model: @user, url:admin_user_path, local: true ,method: :patch) do |f| %>
        <div>
          <div>
            <%= f.label :"会員ID", class: "col-lg-6 control-label" %>
            <%= f.label :"#{@user.id}" %>
          </div>
          <div>
            <%= f.label :"氏名", class: "col-lg-4 control-label" %>
            <%= f.text_field :name, class: "col-md-3 form-control-static name" %>
          </div>
          <div>
            <%= f.label :"Email", class: "col-md-4 control-label" %>
            <%= f.text_field :email, class: "col-md-6 form-control-static name" %>
          </div>
          <div>
            <%= f.label :"ステータス" %>
            　<%= f.radio_button :is_deleted, false %>
            　<%= f.label :is_deleted, "有効", {value: :false, style: "display: inline-block;"} %>
            　<%= f.radio_button :is_deleted, true %>
            　<%= f.label :is_deleted, "退会済", {value: :true, style: "display: inline-block;"} %>
          </div>
        </div>
          <div class="actions  col-md-9 col-md-offset-4">
            <%= f.submit '変更を保存する' ,class: "btn btn-primary" %>
          </div>
      <% end %>
    <div class="col-md-12">
      <%= link_to "戻る", admin_user_path, class: "glyphicon glyphicon-home btn btn-info" %>
    </div>
  </div>
</div>