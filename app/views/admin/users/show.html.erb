<h2 class="head-line title_h2 text-center">
    <%= @user.name %>さんの会員詳細
  </h2>
  <div class="row">

      <table class="table table-bordered w-75">

        <tr><th class="thead-dark">顧客ID</th><td>

            　<%= @user.id %>
        <% if @user.is_deleted == true %>
          <span>　<i class="fas fa-bullseye blue"></i>退会済
        <% elsif @user.is_deleted == false %>
          　<i class="fas fa-bullseye red"></i>有効会員</span>
        <% end %>

        </td></tr>
        <tr><th class="thead-dark">氏名</th><td class="overflow-auto"><%= @user.name %></td></tr>
        <tr><th class="thead-dark">メールアドレス</th><td><%= @user.email%></td></tr>
        <tr><th class="thead-dark"></th><td><%= link_to "編集する",edit_admin_user_path(@user), class: "glyphicon glyphicon-pencil btn btn-success edit_shipping_addres_#{@user.id}" %></td></tr>
      </table>
  </div>