<h2 class="text-center bg-gray">会員一覧</h2>
<div class="row">
  <div class="col-10 col-offset-1">
    <table class="table table-hover table-bordered table-condensed">
      <thead>
        <tr class="info bd-secondary">
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td class="info">
              <%= user.id %>
            </td>
            <td class="text-left">
              <%= link_to admin_user_path(user), class: "btn-link"  do %>
                <%= user.name %>
              <% end %>
            </td>
            <td class="text-left">
              <%= user.email %>
            </td>
            <td class="text-left">
               <% if user.is_deleted == true %>
                <p>退会済</p>
              <% else %>
                <p>有効</p>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>