<div class = "row">
  <div class = col-md-2>
    <div class = "sidebar_fixed">
      <table class="table table-striped">
        <thead class="thead-dark">
          <tr>
            <th>ジャンル検索</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
             <td><%= link_to genre.name, blogs_path(genre_id: genre.id) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  
  <div class = col-md-10>
    <div class = "row">
<table class="table table-striped">
  <thead class="thead-dark">
    <tr>
      <th>登校日</th>
      <th>タイトル</th>
      <th>カテゴリ</th>
      <th>投稿者</th>
      <th>コメント数</th>
    </tr>
  </thead>
  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= blog.start_time.strftime("%Y/%m/%d %H:%M") %></td>
        <td><%= link_to blog.title, blog_path(blog) %></td>
        <td><%= blog.genre.name %></td>
        <td><%= blog.user.name %></td>
        <td><%= blog.blog_comments.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>
    </div>
  </div>
    </div>