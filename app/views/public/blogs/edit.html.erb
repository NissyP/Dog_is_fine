<div class='container'>
  <div class='row'>
  		<h1>Editing Book</h1>
  		<%= form_with model: @blog, url: blog_path, local:true do |f| %>
        <table>
          <tr><td><%= f.attachment_field :image %></td></tr>
          <tr><th><%= f.label :title, 'タイトル' %></th><td><%= f.text_field :title %></td></tr>
          <tr><th><%= f.label :body, '本文'%></th><td><%= f.text_area :body %></td></tr>
          <tr><th><%= f.label :genre_id, 'カテゴリ' %></th><td><%= f.collection_select :genre_id, @genres, :id, :name, :include_blank => "--選択してください--" %></td></tr>
        </table>
        <div class="form-group">
          <%= f.submit class: 'btn btn-success' %>
        </div>
      <% end %>
  		<%= link_to 'Show', blog_path(@blog), class: "blog_#{@blog.id}" %> |
  		<%= link_to 'Back', blogs_path, class: "back" %>
  </div>
</div>